<!-- Carousel
 ================================================== -->
 <div id="myCarousel" class="carousel slide">
   <!-- Indicators -->
   <ol class="carousel-indicators">
     <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
     <li data-target="#myCarousel" data-slide-to="1"></li>
     <li data-target="#myCarousel" data-slide-to="2"></li>
   </ol>
   <div class="carousel-inner">
     <div class="item active">
       <%= image_tag "leading_the_pack.jpg" %>
       <div class="container">
         <div class="carousel-caption">
           <h1>Puff Puff Dragon Boat Club</h1>
           <p>Proudly based in NYC and dedicated to hard work and teamwork.</p>
           <p><%= link_to "Read our Mission Statement", about_path+"#our-mission-statement", :class => "btn btn-large btn-primary" %></p>
         </div>
       </div>
     </div>
     <div class="item">
       <%= image_tag "ithaca.jpg" %>
       <div class="container">
         <div class="carousel-caption">
           <h1>Work hard, play hard</h1>
           <p>We train hard on and off the water all year long</p>
           <p><%= link_to "Training Schedule", training_path, :class => "btn btn-large btn-primary" %></p>
         </div>
       </div>
     </div>
     <div class="item">
       <%= image_tag "flushing.jpg" %>
       <div class="container">
         <div class="carousel-caption">
           <h1>Ready to jump in?</h1>
           <p>We're always looking for new members</p>
           <p><%= link_to "Join Us!", join_path, :class => "btn btn-large btn-primary" %></p>
         </div>
       </div>
     </div>
   </div>
   <a class="left carousel-control" href="#myCarousel" data-slide="prev">
     <span class="glyphicon glyphicon-chevron-left"></span>
   </a>
   <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right white"></span></a>
 </div><!-- /.carousel -->



